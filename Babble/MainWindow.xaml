        </ComboBox>
        <Button Content="Babble" Height="36" HorizontalAlignment="Left" 
		Margin="34,18,0,0" Name="babbleButton" VerticalAlignment="Top" 
		Width="103" Click="babbleButton_Click" />
        <TextBlock Height="26" HorizontalAlignment="Left" Margin="34,80,0,0" 
		Name="countNumbers" Text="" VerticalAlignment="Top" Width="457" 
		Background="#FFFFFFFA" />
        <TextBlock Height="256" HorizontalAlignment="Left" Margin="34,124,0,0" 
		Name="textBlock1" Text="" VerticalAlignment="Top" Width="457" 
		Background="#FFFFFFFA" TextWrapping="Wrap" Padding="2" ClipToBounds="False" />
    </Grid>
</Window>
